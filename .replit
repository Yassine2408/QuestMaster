modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Discord RPG Bot"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "run_discord_bot"

[[workflows.workflow]]
name = "Discord RPG Bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install discord.js && node index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "run_discord_bot"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[deployment]
run = ["sh", "-c", "npm install discord.js && node index.js"]
